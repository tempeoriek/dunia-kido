@* Our Brands *@
@if (Model != null)
{
  if (Model.Any())
  {
    foreach (var item in Model)
    {
      if (item.Id == 2)
      {
        if (item.DesktopItems.Any()) {
          <div class="d-none d-md-block hidden-xs hidden-sm">
            <div class="d-flex justify-content-center mb-5">
              <hr  style="width: 90%; background-color: #707070; margin: 0;">
            </div>
            <div class="row mb-5">
              <div class="col-12 col-md-12 d-flex justify-content-center">
                <h1 style="color: #707070; font-weight: bold;">OUR BRANDS</h1>
              </div>
            </div>

            <div class="row mb-5" style="height: 150px;">
              <div class="col-md-2"></div>
              @for (int i = 0; i < item.DesktopItems.Count(); i++) {
                if (item.DesktopItems[i].Title.Contains("brand")) {
                  <div class="col-6 col-md-2 col-sm-2 p-3" style="display: flex; justify-content: center; align-items: center;">
                    <img class="w-50" src="@item.DesktopItems[i].PictureUrl">
                  </div>
                }
              }
              <div class="col-md-2 "></div>
            </div>
          </div>
        }

        if (item.MobileItems.Any())
          {
            <div class="row d-block d-md-none hidden-md hidden-xl carousel slide mb-3" data-ride="carousel" id="carouselExampleControlsBrand">
              <div class="carousel-inner col-12 d-block d-md-block position-relative" style="height: 160px;">
                @{
                  var firstactive = "active";
                  for (int z = 0; z < item.MobileItems.Count(); z++)
                  {
                    if (item.MobileItems[z].Title.Contains("brand")) {
                      <div class="carousel-item @firstactive" style="height: inherit;">
                        <div class="row" style="height: inherit;">
                          <div class="col-6" style="height: inherit;">
                            <a style="height: inherit;" class="d-flex justify-content-center align-items-center" href="@item.MobileItems[z].NavigateTo"> 
                              <img style="margin-left: 60px;" class="w-50" src="@item.MobileItems[z].PictureUrl"> 
                            </a>
                          </div>
                          <div class="col-6" style="height: inherit;">
                            <a style="height: inherit;" class="d-flex justify-content-center align-items-center" href="@item.MobileItems[z].NavigateTo"> 
                              <img style="margin-right: 60px;" class="w-50" src="@item.MobileItems[z+1].PictureUrl"> 
                            </a>
                          </div>
                        </div>
                      </div>

                      firstactive = "";
                      z = z-1;

                      if (z+2 <= item.MobileItems.Count()) {
                        z = z+2;
                      } else if (z < 0) {
                        z = 0;
                      }
                    }
                  
                  }
                }
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControlsBrand" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControlsBrand" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          }
        
      }

    }
  }
}

