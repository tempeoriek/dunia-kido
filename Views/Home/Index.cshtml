                <div class="overlay-mobile-brand-img"><a href="@item.MobileItems[1].NavigateTo" style="color: white; font-weight: bold; font-size: 16px;">@item.MobileItems[1].Title.ToUpper()</a></div>
                <div class="overlay-bottom-mobile-brand-img"><a href="@item.MobileItems[1].NavigateTo" style="color: white; font-weight: bold; font-size: 12px;">Explore Now</a></div>
